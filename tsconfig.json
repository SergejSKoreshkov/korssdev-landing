{
    "compilerOptions": {
        "types": [
            "node",
            "jest"
        ],
        "sourceMap": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "strict": true,
        "pretty": true,
        "allowSyntheticDefaultImports": false,
        "suppressImplicitAnyIndexErrors": false,
        "allowJs": false,
        "module": "commonjs",
        "target": "ES6",
        "jsx": "react",
    },
    "compileOnSave": true,
    "include": ["./src/**/*"],
    "exclude": [
        "node_modules",
    ]
  }